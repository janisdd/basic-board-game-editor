
@import "../../styles/behaviors.styl"

.game-instructions-site {
  height calc(100% - 55px) //the size of the header bar
  position relative
}


.panel {
  border 1px solid rgb(77, 76, 74)
  display flex
  flex-direction column

  .panel-header {
    display flex
    padding 0.5em
    border-bottom  1px solid rgb(77, 76, 74)
  }

  .panel-content {
    padding 0.25em
    flex 1
  }

  .action-bar {
    display inline-flex
    margin-left 2em

    .item {
      @extend .clickable
      margin-left 0.5em
    }

    .item:hover {
      @extend .clickable:hover
    }
  }
}

.left-side {
  position absolute
  top 0
  left 0
  bottom 0
  margin-right: 0.25em;
}

.right-side {
  position absolute
  top 0
  right 0
  bottom 0
  margin-left: 0.25em;
}



.vertical-gripper {
  position absolute
  top 0
  bottom 0
  height 100%
}
